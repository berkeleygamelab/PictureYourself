        <link rel="stylesheet" type="text/css" href="/css/PictureYourself.css"/>
        <link rel="stylesheet" type="text/css" href="/css/layout.css"/>

        <script type="text/javascript" src='/js/libraries/modernizr/modernizr-latest.js'></script>
        <script type="text/javascript" src='/js/libraries/jquery/jquery-2.1.3.min.js'> </script>
