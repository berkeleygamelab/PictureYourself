<!DOCTYPE html>
<html ng-app='PictureYourselfApp' no-js>
    <head>
        <title>P.I.C. Your Future</title>

        <link rel="stylesheet" type="text/css" href="/css/PictureYourself.css"/>
        <link rel="stylesheet" type="text/css" href="/css/layout.css"/>

        <script src='/js/modernizr-latest.js'></script>
        <script src='/js/jquery-2.0.3.min.js'> </script>
        <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
        <script src='/js/angular.min.js'> </script>
        <script src='/js/angular-resource.min.js'></script>
        <script src='/js/kinetic-v4.7.4.js'></script>
        <script src='/js/helpers.js'></script>
        <script src='/js/crop.js'></script>

        <script type="text/javascript">
            var app = angular.module('PictureYourselfApp', ['ngResource']);
        </script>
        
        <script src='/js/upload.js'></script>
        <script src='/js/PictureYourself.js'></script>
        <script src='/js/webcam.js'></script>
        <script src='/js/compatibility.js'></script>

        <script type="text/javascript">
            checkCompatibility();
        </script>
        
    </head>

    <body>
        <div id="compatibility"></div>
        <div ng-controller='LayoutCtrl'>
            <div class="outside"> <!--container-->
                <nav class="navbar" role="navigation">

                    <a href="/" class="navbar-link"><img class='navbaricon' alt='Home' src='/images/img/new_home.png'></a>
                    <a  class="navbar-link"><img class='navbaricon' alt='Picture Yourself Logo' src='/images/img/new_logo.png'></a>

                    <div id="navright">
                        <div class="navtoleft">
                            <a  class="navbar-link" href="/"><img id='navcam' class='navbaricon' alt='Take picture' src='/images/img/new_cam.png'></a>
                        </div>

                        <div class="navtoleft">
                            <a  class="navbar-link"><img class='navbaricon' alt='Notification'  src='/images/img/new_notification.png'></a>
                        </div>

                        <div class="navtoleft" id='hamburger'>
                            <img id="ham" alt="Settings" src="/images/img/new_config.png" />

                            <div id="dropdown">
                                <ul id="nav-list">
                                  <li><a class="nav-link" href="/">
                                        <div class="nav-button">Take Selfie</div>
                                    </a>
                                </li>
                                  <li><a class="nav-link" href="/selfie">
                                        <div class="nav-button">A Year at Cal</div>
                                    </a>
                                </li>
                                  <li><a class="nav-link" href="#">
                                        <div class="nav-button">Gallery</div>
                                    </a>
                                </li>
                                </ul>
                            </div> <!--dropdown-->
                        </div> <!--navtoleft-->
                    </div> <!--navright-->
                </nav>
            </div> <!--outside-->

            <%= yield %>

        </div> <!-- End of LayoutCtrl-->
    </body>

</html>
