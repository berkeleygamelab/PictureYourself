    </head>

    <body background = 'http://i.imgur.com/P3urdLb.png'>
        <script>
    $( document ).ready(function() {
      $('.navicon').on('click', function(){
        $('.mainNavDropDown').slideToggle(500);
       });
   });
 </script>

        <div id="compatibility"></div>
        <div ng-controller='LayoutCtrl'>
            <div class="outside">
                <nav class="navbar" role="navigation">

          <div>
              <img id = 'logo' src = 'http://i.imgur.com/ENFluBk.png'>
                <div class="navtitle" > PIC YOUR FUTURE</div>
                <div class = 'tabs'>
                  <!-- no longer needed -->
                  <a href = 'ph' > <li class = "navytabby" id = 'feed'>  </li> </a>
                  <a href = 'ph' > <li class = "navytabby" id = 'about'>   </li> </a>
              </div>
          </div>
          <!-- ^^^^ -->


          <div id="navright">
            <div class="login_div">
              <input type='button' id='login' class='button' ng-click='login()' value = "LOGIN">
          </div>
          <div class = "mainNav clearfix">
            <p class = "navicon">&#9776;</p>
           </div>
           <ul class = "mainNavDropDown clearfix">
             <li><a href="/">Home</a></li>
             <li><a href="/about">About</a></li>
             <li><a href="/feed">Feed</a></li>
             <li><a href="/contact">Contact</a></li>
           </ul>
        </div>
        </nav>
            </div> <!--outside-->

            <%= yield %>

        </div> <!-- End of LayoutCtrl-->
    </body>

</html>
